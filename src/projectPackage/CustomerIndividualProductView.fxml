<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectPackage.CustomerIndividualProductViewController">
   <children>
      <Label layoutX="273.0" layoutY="23.0" text="Product View">
         <font>
            <Font name="Lucida Grande" size="13.0" />
         </font>
      </Label>
      <Label layoutX="141.0" layoutY="23.0" text="Customer Home -&gt; ">
         <font>
            <Font name="Lucida Grande" size="13.0" />
         </font>
      </Label>
      <Button fx:id="backToHomeButton" layoutX="14.0" layoutY="17.0" mnemonicParsing="false" onAction="#backToCustomerHome" text="Back to home">
         <graphic>
            <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Home-Icon.jpeg" />
               </image>
            </ImageView>
         </graphic></Button>
      <Pane layoutX="28.0" layoutY="64.0" prefHeight="260.0" prefWidth="544.0">
         <children>
            <Label layoutX="25.0" layoutY="25.0" text="Product ID:" />
            <Label layoutX="25.0" layoutY="48.0" text="Product Name:" />
            <Label layoutX="25.0" layoutY="75.0" text="Price:" />
            <Label layoutX="25.0" layoutY="113.0" text="Photo:" />
         </children>
      </Pane>
      <Button fx:id="addToCartButton" layoutX="492.0" layoutY="324.0" mnemonicParsing="false" text="Add to Cart" />
      <Button fx:id="cartButton" layoutX="492.0" layoutY="18.0" mnemonicParsing="false" onAction="#openOrderCart" prefHeight="26.0" prefWidth="82.0" text="Cart">
         <graphic>
            <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Cart-icon.png" />
               </image>
            </ImageView>
         </graphic></Button>
   </children>
</AnchorPane>
